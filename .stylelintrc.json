{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": null,
    "custom-property-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/advent_activities/**/*.css"],
      "rules": {
        "selector-id-pattern": null,
        "keyframes-name-pattern": null
      }
    }
  ],
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ]
}
