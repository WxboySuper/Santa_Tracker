# Santa Tracker Environment Configuration
#
# Copy this file to .env and update the values
# DO NOT commit .env to version control!

# ================================
# Required Configuration
# ================================

# Admin Dashboard Password
# Used to authenticate access to the admin dashboard at /admin
# Use a strong, unique password with 16+ characters
ADMIN_PASSWORD=your-secure-admin-password-here

# ================================
# Optional Configuration
# ================================

# Flask Secret Key
# Used for session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Flask Debug Mode
# Enable detailed error pages and auto-reload
# WARNING: Never enable in production!
# Options: True, False
# Default: False
FLASK_DEBUG=True

# ================================
# Feature Flags
# ================================

# Advent Calendar Feature Flag
# Controls visibility of the advent calendar feature
# When disabled (False), the advent calendar UI and API endpoints are hidden
# Options: True, False
# Default: False
ADVENT_ENABLED=False

# ================================
# Logging Configuration
# ================================

# Log Level
# Controls the verbosity of application logs
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# JSON Structured Logging
# Enable JSON format for production log aggregators (ELK, Splunk, CloudWatch)
# Options: True, False
# Default: False
JSON_LOGS=False

# ================================
# Production Configuration
# ================================

# For production deployment, use:
# FLASK_DEBUG=False
# SECRET_KEY=<generated-secure-key>
# ADMIN_PASSWORD=<strong-password>
# ADVENT_ENABLED=True  # Enable when advent feature is ready
# LOG_LEVEL=INFO
# JSON_LOGS=True  # Enable for log aggregators

# ================================
# Security Notes
# ================================

# 1. Always use strong, unique passwords
# 2. Never commit .env to version control
# 3. Generate new SECRET_KEY for production
# 4. Use different passwords per environment
# 5. Store credentials securely (e.g., password manager)
